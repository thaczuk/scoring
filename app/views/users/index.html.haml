= render 'shared/header', header: 'Listing users'
%table.table.table-striped
  %thead
    %tr
      %th Username
      %th Email
      %th Role
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.role
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)

= link_to 'New user', new_user_path