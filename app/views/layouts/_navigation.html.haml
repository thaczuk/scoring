= link_to "Comp Controller", root_path, :class => 'brand nav'
%ul.nav
  %li= link_to "Competitions", competitions_path
  - if logged_in?
    %li= link_to "Events", events_path
    %li= link_to "Athletes", athletes_path
    %li= link_to "Categories", competition_categories_path
    %li= link_to "Users", users_path
    %li= link_to 'About', about_path
    .btn-group.pull-right
      = link_to('#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do
        = current_user.username
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to(edit_user_path(current_user)) do
            %i.icon-pencil
            edit profile
        %li
          = link_to(user_path(current_user)) do
            %i.icon-user
            view profile
        %li
          = link_to(logout_path) do
            %i.icon-circle-arrow-left
            logout
  - else
    %li.pull-right= link_to 'About', about_path
    = form_tag '/login', :class => 'navbar-form pull-right' do
      = text_field_tag :username
      = password_field_tag :password
      = submit_tag "Log in", :class => 'btn btn-small btn-success'